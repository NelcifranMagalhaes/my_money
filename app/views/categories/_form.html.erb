<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :name, class: "form-label", for: "categoryName" %>
    <%= form.text_field :name, class: "form-control", id: "categoryName", placeholder: "nome da categoria" %>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label", for: "categoryDescription" %>
    <%= form.text_field :description, class: "form-control", id: "categoryDescription", placeholder: "descrição da categoria" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Criar Categoria", class: "btn btn-primary" %>
  </div>

  <div class="mb-3">
    <%= link_to "Voltar", categories_path, class: "btn btn-secondary" %>
  </div>

<% end %>
