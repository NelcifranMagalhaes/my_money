<%= tag.div(flash[:alert], class: "alert alert-danger", role: "alert") if flash[:alert] %>
<%= tag.div(flash[:notice], class: "alert alert-success", role: "alert") if flash[:notice] %>

<h1 class="h3 mb-3 fw-normal text-center">Meu Dinheiro</h1>
<img class="mb-4 d-block mx-auto" src="<%= asset_path('despesas.png') %>" alt="Logo" width="72" height="72">

<main class="form-signin w-100 m-auto">
  <%= form_with url: session_path do |form| %>
    <h1 class="h3 mb-3 fw-normal">Login</h1>

    <div class="form-floating">
      <%= form.email_field :email_address, required: true, class: "form-control", id: "floatingInput", placeholder: "name@example.com" %>
      <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
      <%= form.password_field :password, required: true, class: "form-control", id: "floatingPassword", placeholder: "Password" %>
      <label for="floatingPassword">Senha</label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="checkDefault">
      <label class="form-check-label" for="checkDefault">
        Lembrar-me
      </label>
    </div>
    <%= form.submit "Entrar", class: "btn btn-primary w-100 py-2" %>
    <p class="mt-5 mb-3 text-body-secondary">&copy; 2025â€“<%= Time.current.year %></p>
  <% end %>
<%= link_to "Esqueceu a senha?", new_password_path %>

</main>
